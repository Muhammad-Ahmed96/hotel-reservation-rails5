
<tr>
  <td><%= index %></td>
  <td><%= reservation.name %></td>
  <td><%= reservation.date %></td>
  <td><%= "#{reservation.start_time.strftime("%I:%M")} to #{(reservation.start_time + 1.hour).strftime("%I:%M")}"  %></td>
  <td><%= reservation.tables.pluck(:name).join(",") %></td>
  <td><%= reservation.seating_capacity %></td>
  <td><%= reservation.addition_information %></td>
  <td>
    <%= link_to "Delete", reservation_path(reservation.id), data: { turbo_method: :delete, turbo_confirm: 'Are you sure want to delete ?' }, class: 'btn btn-sm btn-danger' %>
  </td>
</tr>
